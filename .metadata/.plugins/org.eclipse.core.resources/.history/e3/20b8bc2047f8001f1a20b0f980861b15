/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define KEY_BUF_SIZE 4
#define KEY0 0
#define EC11_KEY 1
#define KEY_DEBOUNCING_TIME_10MS 10
#define KEY_DOUBLE_TIME_200MS 200
#define KEY_LONG_CLICK_TIME_700MS 700
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */
#define LockBufForever() LockBuf(0)
/* USER CODE END PM */

